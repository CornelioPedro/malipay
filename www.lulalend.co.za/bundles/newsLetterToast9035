function showAndHidePopUp(){$(".custom-alert").show().delay(5e3).queue(function(){$(".custom-alert").hide();$(this).dequeue()})}function updateAlertClass(n){n==="true"?($("#newsLetterAlert").hasClass("alert-danger")&&$("#newsLetterAlert").removeClass("alert-danger"),$("#newsLetterAlert").addClass("alert-success")):($("#newsLetterAlert").hasClass("alert-success")&&$("#newsLetterAlert").removeClass("alert-success"),$("#newsLetterAlert").addClass("alert-danger"))}$(document).ready(function(){updateAlertClass("true");$("#btnSubscribe").click(function(){var n=$("#newsLetterForm").serialize();$.ajax({type:"Post",url:"/Home/NewsLetterSubscribe",data:n,success:function(n){"success"in n?(updateAlertClass("true"),$("#newsLetterMessage").html(n.success)):(updateAlertClass("false"),$("#newsLetterMessage").html(n.error));showAndHidePopUp()},error:function(n){updateAlertClass("false");$("#newsLetterMessage").html(n.error);showAndHidePopUp()}}).done(function(){$("#emailAddress").val("")})})})